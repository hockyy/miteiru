{
  "private": true,
  "name": "miteiru",
  "description": "Miteiru",
  "version": "2.0.0",
  "author": "Hocky Yudhiono <hocky.yudhiono@gmail.com>",
  "main": "app/background.js",
  "build": {
    "appId": "id.hocky.miteiru",
    "mac": {
      "icon": "resources/icon.icns",
      "target": [
        "pkg"
      ]
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "resources/icon.icns",
      "target": [
        "deb",
        "AppImage"
      ]
    }
  },
  "scripts": {
    "predev": "npm run script:copy",
    "script:copy": "node scripts/copy.js",
    "script:cleansvg": "node scripts/cleanSvg.js",
    "script:initrepo": "node scripts/initrepo.js",
    "dev": "nextron",
    "build": "nextron build",
    "build:linux": "nextron build --linux",
    "postinstall": "electron-builder install-app-deps && patch-package"
  },
  "dependencies": {
    "@electron/asar": "^3.2.4",
    "@electron/osx-sign": "^1.0.4",
    "@plussub/srt-vtt-parser": "^1.1.0",
    "ass-compiler": "^0.1.8",
    "async-await-queue": "^2.1.4",
    "axios": "^1.4.0",
    "detect-file-encoding-and-language": "^2.4.0",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.1.0",
    "extract-zip": "^2.0.1",
    "fs": "^0.0.1-security",
    "fs-extra": "^11.1.1",
    "html-entities": "^2.4.0",
    "html-minifier": "^4.0.0",
    "html-react-parser": "^3.0.16",
    "iconv-lite": "^0.6.3",
    "jmdict-wrapper": "^1.1.2",
    "jp-verbs": "^1.0.1",
    "kanjidic-wrapper": "^1.0.2",
    "kuromojin": "^3.0.0",
    "patch-package": "^7.0.0",
    "react-awesome-button": "^7.0.5",
    "react-colorful": "^5.6.1",
    "react-smooth-collapse": "^2.1.2",
    "react-svg": "^16.1.19",
    "react-video-seek-slider": "^6.0.4",
    "shunou": "^1.0.2",
    "styled-components": "^6.0.3",
    "video.js": "^8.3.0",
    "videojs-youtube": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^16.18.38",
    "@types/react": "^18.2.14",
    "autoprefixer": "^10.4.14",
    "electron": "^21.4.4",
    "electron-builder": "^24.4.0",
    "eslint-config-next": "^13.4.9",
    "next": "^13.4.9",
    "nextron": "^8.5.0",
    "postcss": "^8.4.25",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.9.5"
  }
}
